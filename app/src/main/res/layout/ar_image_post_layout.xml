<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F0DD">

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/arSelfieChallengeLevelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            layout="@layout/ar_challenge_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/imagePostLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/arImagePostBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/search_back_button" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/arImagePostBackButton"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/claritycity_bold"
            android:gravity="center_horizontal"
            android:text="Post this photo to the Breadcrumbs Feed?"
            android:textColor="#454D5A"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/capturedImage"
            android:layout_width="320dp"
            android:layout_height="270dp"
            android:layout_below="@id/titleText"
            android:scaleType="fitXY"
            android:layout_marginTop="70dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:foregroundGravity="center_horizontal" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/poiNameBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFC627"
            android:orientation="horizontal"
            android:layout_below="@id/capturedImage"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp" >

            <ImageView
                android:id="@+id/image3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/breadcrumbs_trail" />

            <TextView
                android:id="@+id/image_post_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/image3"
                android:fontFamily="@font/claritycity_bold"
                android:text="Under Construction..."
                android:textColor="#4B3B30"
                android:textSize="12sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/didU_knowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/poiNameBar"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="80dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/did_you_know_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/claritycity_bold"
                android:gravity="center_horizontal"
                android:text="DID YOU KNOW?"
                android:textColor="#E98D58"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/did_you_know_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dinish_regular"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="1.5dp"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:textColor="#454D5A"
                android:textSize="14sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
