<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.frag.PendingFriendRequestFrag"
    android:padding="24dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pr_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pr_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_pending_request_text"
        android:gravity="center"
        android:fontFamily="@font/claritycity_bold"
        android:textSize="@dimen/challenge_begin_screen_discovery_text_size"
        android:textColor="#4B3B30"
        android:visibility="gone"/>

</FrameLayout>