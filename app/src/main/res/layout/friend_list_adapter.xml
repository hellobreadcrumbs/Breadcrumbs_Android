<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/friend_request_banner">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/feedPostUserProfilePicture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/no_image"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friendName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/claritycity_bold"
        android:maxLines="2"
        android:textSize="@dimen/disclaimer_content_text_size"
        android:text="Anna Vo"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/feedPostUserProfilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/feedPostUserProfilePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friend_level_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Master Explorer Lv. 35"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="60dp"
        android:textSize="@dimen/challenge_begin_screen_discovery_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/feedPostUserProfilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/feedPostUserProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/friendName"/>
    <ImageView
        android:id="@+id/add_friend_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:fontFamily="@font/claritycity_bold"
        android:background="@drawable/friend_list_screen_add_btn"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friend_level_name"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>