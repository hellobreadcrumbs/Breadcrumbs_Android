            android:name=".view.arcore.SampleARClass"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".view.arcore.ARImagePostScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity
            android:name=".view.HowToPlayActivity"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".view.SettingsScreenAct"
            android:theme="@style/SplashTheme" />

        <activity
            android:name=".view.rewards.RewardsScreenActivity"
            android:theme="@style/SplashTheme" />
